{
  "name": "reactron-lite",
  "version": "1.0.0",
  "description": "React/Electron boilerplate app with as little magic as possible",
  "license": "MIT",
  "engines": {
    "node": ">=14.15.0",
    "npm": ">=6.14.8"
  },
  "main": "main.js",
  "scripts": {
    "start": "NODE_ENV=development webpack serve --hot --config webpack.dev.config.js",
    "prod": "NODE_ENV=production webpack --config webpack.build.config.js && electron .",
    "build": "NODE_ENV=production webpack --config webpack.build.config.js",
    "package": "npm run build && electron-packager ./ --out=./release-builds"
  },
  "dependencies": {
    "react": "^17.0.1",
    "react-dom": "^17.0.1"
  },
  "devDependencies": {
    "@babel/core": "^7.12.10",
    "@babel/preset-env": "^7.12.10",
    "@babel/preset-react": "^7.12.10",
    "babel-loader": "^8.2.2",
    "css-loader": "^5.0.1",
    "electron": "^11.1.0",
    "electron-devtools-installer": "^3.1.1",
    "electron-packager": "^15.2.0",
    "file-loader": "^6.2.0",
    "style-loader": "^2.0.0",
    "webpack": "^5.10.1",
    "webpack-cli": "^4.2.0",
    "webpack-dev-server": "^3.11.0"
  }
}
